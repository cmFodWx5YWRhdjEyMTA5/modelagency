<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.talentnew">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.talentnew.utilities.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.talentnew.activities.talent.ModelContactActivity"
            android:label="@string/title_activity_model_contact"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar"></activity>
        <activity
            android:name="com.talentnew.activities.talent.BasicProfileActivity"
            android:label="@string/title_activity_basic_profile"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.common.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.common.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.talentnew.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name="com.talentnew.activities.common.BaseImageActivity" />
        <activity
            android:name="com.talentnew.activities.common.SettingsActivity"
            android:label="@string/title_activity_boost"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity android:name="com.talentnew.activities.agency.ViewJobApplication" />
        <activity android:name="com.talentnew.activities.agency.AgentProfileActivity" />
        <activity android:name="com.talentnew.activities.agency.PostJobActivity" />
        <activity
            android:name="com.talentnew.activities.common.BoostActivity"
            android:label="@string/title_activity_boost"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.agency.CourseListActivity"
            android:label="@string/title_activity_course_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.agency.CourseDetailsActivity"
            android:label="@string/title_activity_course_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.agency.ModelListActivity"
            android:label="@string/title_activity_model_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.talent.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.talent.JobDetailActivity"
            android:label="@string/title_activity_job_detail"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.talent.JobListActivity"
            android:label="@string/title_activity_job_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.talent.TalentRegisterActivity"
            android:label="@string/title_activity_talent_register"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.talentnew.activities.common.RegistrationHome"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.talentnew.activities.common.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name="com.talentnew.activities.talent.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.talentnew.activities.common.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.talentnew.activities.agency.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.talentnew.activities.common.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.talentnew.activities.common.BaseActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>
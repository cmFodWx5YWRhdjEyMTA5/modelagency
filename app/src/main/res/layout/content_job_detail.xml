<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.talent.JobDetailActivity"
    tools:showIn="@layout/activity_job_detail">

    <ImageView
        android:id="@+id/iv_image"
        android:src="@drawable/model_2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/job_detail_image_size"/>

    <ScrollView
        android:layout_below="@+id/iv_image"
        android:layout_above="@+id/btn_apply"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Job Place:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_job"
                    android:text="Delhi"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/job_detail_view_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Job Close Date:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_close_date"
                    android:text="01 October 2019"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/job_detail_view_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Preferences:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_preferences"
                    android:text="Female, Male"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/job_detail_view_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Genres:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_genre"
                    android:text="Beauty"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/job_detail_view_margin"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nudity:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="No"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/job_detail_view_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Compensation:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_compensation"
                    android:text="Rs 2500 for work"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Description:"
                    android:textColor="@color/primary_text_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="@dimen/job_detail_label_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:text="@string/lorem"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_apply"
        android:text="APPLY"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_close"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_close_black_24dp"
        android:tint="@color/red_500"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_header"
            android:text="CREATE ALBUM"
            android:textAllCaps="true"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_label"
            android:text="Title"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/text_header"
            android:gravity="center"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_title"
            android:layout_below="@+id/tv_label"
            android:hint="-"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/edit_profile_edit_text_padding"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btn_create"
            android:layout_below="@+id/et_title"
            android:text="CREATE"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/accent_solid_round_corner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_below="@+id/btn_create"
            android:text="CANCEL"
            android:textColor="@color/primary_text_color"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/grey_stroke_white_round_corner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>
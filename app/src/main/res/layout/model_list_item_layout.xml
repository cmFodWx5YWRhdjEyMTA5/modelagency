<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/relative_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:src="@drawable/model"
        android:layout_width="@dimen/profile_circle_image_size"
        android:layout_height="@dimen/profile_circle_image_size"/>

    <ImageView
        android:layout_marginTop="@dimen/view_small_margin"
        android:layout_marginRight="@dimen/view_small_margin"
        android:id="@+id/iv_upload_profile_pic"
        android:elevation="8dp"
        android:tint="@color/blue800"
        android:layout_alignRight="@id/iv_profile_pic"
        android:src="@drawable/star"
        android:layout_width="@dimen/profile_star_size"
        android:layout_height="@dimen/profile_star_size"
        android:background="@drawable/white_solid_blue_circle"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@+id/relative_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name"
            android:text="Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"/>

        <TextView
            android:textAlignment="center"
            android:layout_below="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_address"
            android:textColor="@color/black"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"/>

    </RelativeLayout>


</RelativeLayout>
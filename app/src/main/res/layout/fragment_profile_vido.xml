<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileVidoFragment">

    <TextView
        android:id="@+id/tv_header"
        android:text="My video"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/normal_text_size"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/grey200"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/primary_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@+id/tv_header"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_view_height">

        <VideoView
            android:id="@+id/video_view"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_transparent"
            android:background="@color/transparent_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_upload_video"
            android:layout_margin="16dp"
            android:background="@drawable/white_border_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_upload_banner"
            android:tint="@color/white"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_videocam_black_24dp"
            android:layout_width="@dimen/upload_icon_size"
            android:layout_height="@dimen/upload_icon_size"/>

        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            android:textSize="@dimen/normal_text_size"
            android:text="Add or change video"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_upload_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

        <include layout="@layout/error_layout"/>

    </RelativeLayout>

</RelativeLayout>
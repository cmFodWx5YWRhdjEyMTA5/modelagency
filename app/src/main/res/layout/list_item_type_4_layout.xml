<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="@dimen/container_view_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            card_view:cardElevation="0dp"
            card_view:cardBackgroundColor="@color/green700"
            android:layout_width="@dimen/customer_list_image_width"
            android:layout_height="@dimen/customer_list_image_height"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/image_view"
                android:src="@drawable/model"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_details"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/card_view"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_name"
                android:textColor="@color/black"
                android:textSize="@dimen/home_list_cat_name_text_size_type_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_companyName"
                android:layout_marginTop="@dimen/view_snall_margin"
                android:layout_marginBottom="@dimen/view_snall_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/home_list_cat_name_text_size_type_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_address"
                android:layout_marginTop="@dimen/view_snall_margin"
                android:layout_marginBottom="@dimen/view_snall_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/home_list_cat_name_text_size_type_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/btn_more"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linear_details"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="More"
            android:textColor="@color/black"
            android:background="@drawable/grey_border_small_round_background"/>
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:background="@color/grey500"
        android:layout_marginTop="@dimen/separator_margin"
        android:layout_below="@+id/container"
        android:layout_alignLeft="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_my_subscription"
    tools:context=".activities.agency.MySubscriptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/black"
            android:src="@drawable/arrow_back"/>

    <TextView
        android:layout_toRightOf="@+id/iv_back"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_subscription"
        android:textSize="@dimen/very_large_text_size"
        android:textColor="@color/black"
        android:text="My Subscription"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/tv_subscription"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


              <TextView
                    android:id="@+id/tv_header"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text_size"
                    android:gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/accent_solid_top_corner_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_pay"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/normal_text_size"
                    android:gravity="center_horizontal"
                    android:background="@drawable/accent_stroke_background"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>

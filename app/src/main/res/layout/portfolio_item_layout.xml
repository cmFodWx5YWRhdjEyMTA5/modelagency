<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/profile_detail_portfolio_padding"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_detail_portfolio_size">

    <ImageView
        android:id="@+id/iv_image"
        android:scaleType="centerCrop"
        android:src="@drawable/model_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_add_photo"
        android:background="@drawable/grey_border_background"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_add"
            android:tint="@color/colorAccent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_width="@dimen/upload_icon_size"
            android:layout_height="@dimen/upload_icon_size"/>

        <TextView
            android:layout_marginTop="5dp"
            android:text="Add Photo"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>
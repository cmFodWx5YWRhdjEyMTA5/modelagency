<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_upload_document"
    tools:context=".activities.agency.UploadDocumentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">
        
        <ImageView
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/black"
            android:src="@drawable/arrow_back"/>

    <TextView
        android:layout_toRightOf="@+id/iv_back"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_registration"
        android:textSize="@dimen/very_large_text_size"
        android:textColor="@color/black"
        android:text="Upload Your Documents"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@+id/tv_registration"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/linear_upload_gst"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_view_size"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_gst"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/edit_text_horizontal_padding"
                android:hint="Not Verified"
                android:textColorHint="@color/red_500"
                android:textColor="@color/green700"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingBottom="5dp"
                android:textSize="@dimen/edit_text_size" />

            <Button
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/button_upload_gst"
                android:background="@drawable/button2"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:text="Upload GST"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linear_upload_id_proof"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linear_upload_gst"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upload_view_size"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_id_proof"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/edit_text_horizontal_padding"
                android:hint="Not Verified"
                android:textColorHint="@color/red_500"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/green700"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/edit_text_size" />

            <Button
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/button_upload_id_proof"
                android:background="@drawable/button2"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:text="Upload ID Proof"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>


        <Button
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/linear_upload_id_proof"
            android:id="@+id/button_submit"
            android:background="@drawable/button1"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_size"
            android:text="SUBMIT "
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"/>


    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

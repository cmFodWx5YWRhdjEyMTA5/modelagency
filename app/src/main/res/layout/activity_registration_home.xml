<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.modelagency.activities.common.RegistrationHome">

    <RelativeLayout
        android:background="@color/transparent_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_registration"
            android:textSize="60dp"
            android:textColor="@color/white"
            android:text="Registration"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/tv_registration"
            android:id="@+id/button_talent"
            android:background="@drawable/button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="TALENT"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button_talent"
            android:id="@+id/button_agency"
            android:background="@drawable/button1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="AGENCY "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>

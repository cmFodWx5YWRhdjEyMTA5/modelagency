<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.talent.EditProfileActivity"
    tools:showIn="@layout/activity_edit_profile">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_detail_image_size">

        <ImageView
            android:src="@drawable/model_2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:background="@color/transparent_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_pic"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:elevation="5dp"
            android:src="@drawable/model"
            android:layout_width="@dimen/profile_detail_profile_image_size"
            android:layout_height="@dimen/profile_detail_profile_image_size"/>

        <ImageView
            android:id="@+id/iv_upload_profile_pic"
            android:tint="@color/white"
            android:elevation="8dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_width="@dimen/upload_icon_size"
            android:layout_height="@dimen/upload_icon_size"/>

        <ImageView
            android:id="@+id/iv_upload_banner"
            android:tint="@color/white"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_width="@dimen/upload_icon_size"
            android:layout_height="@dimen/upload_icon_size"/>


        <RelativeLayout android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/iv_close"
                android:tint="@color/white"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"/>

            <TextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/white"
                android:text="Edit Profile"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_save"
                android:textColor="@color/white"
                android:text="Save"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:tint="@color/white"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"/>

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/rl_header"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        app:tabGravity="fill"
        app:tabIndicatorHeight="2dp"
        app:tabBackground="@color/grey200"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:text="Information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.tabs.TabItem
            android:text="Portfolio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/tabLayout"
        android:layout_above="@+id/linear_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <include layout="@layout/footer_layout"/>

    <RelativeLayout
        android:id="@+id/rl_info_input"
        android:visibility="gone"
        android:gravity="bottom"
        android:elevation="8dp"
        android:background="@color/transparent_light_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/info_input_dialog_layout"/>

    </RelativeLayout>

</RelativeLayout>
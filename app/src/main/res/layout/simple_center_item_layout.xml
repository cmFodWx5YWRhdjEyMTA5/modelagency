<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:background="@drawable/grey_border_bottom_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name"
        android:gravity="center_horizontal"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/normal_text_size"
        android:paddingLeft="@dimen/settings_text_horizontal_padding"
        android:paddingRight="@dimen/settings_text_horizontal_padding"
        android:paddingTop="@dimen/settings_text_vertical_padding"
        android:paddingBottom="@dimen/settings_text_vertical_padding"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</RelativeLayout>
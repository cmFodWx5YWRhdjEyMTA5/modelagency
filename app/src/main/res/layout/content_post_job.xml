<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.agency.PostJobActivity"
    tools:showIn="@layout/activity_post_job">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_footer">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_detail_image_size">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:background="@color/transparent_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_margin="16dp"
            android:background="@drawable/white_border_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_upload_banner"
            android:tint="@color/white"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_width="@dimen/upload_icon_size"
            android:layout_height="@dimen/upload_icon_size"/>
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            android:textSize="@dimen/normal_text_size"
            android:text="Add Photo"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_upload_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/tv_select_genere"
        android:layout_below="@+id/rl_header"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="@dimen/normal_text_size"
        android:gravity="center_horizontal"
        android:textColor="@color/primary_text_color"
        android:text="Select Genere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:id="@+id/recycler_view_genre"
        android:layout_below="@+id/tv_select_genere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/linear_job_title"
        android:layout_below="@+id/recycler_view_genre"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_label"
            android:text="Job Title"
            android:gravity="center"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_job_title"
            android:hint="-"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/edit_profile_edit_text_padding"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/linear_job_Location"
        android:layout_below="@+id/linear_job_title"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_label1"
            android:text="Location"
            android:gravity="center"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_job_location"
            android:hint="-"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/edit_profile_edit_text_padding"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

         <TextView
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             android:layout_marginRight="@dimen/activity_horizontal_margin"
             android:id="@+id/tv_select_gender"
             android:layout_below="@+id/linear_job_Location"
             android:paddingTop="12dp"
             android:paddingBottom="12dp"
             android:textSize="@dimen/normal_text_size"
             android:gravity="center_horizontal"
             android:textColor="@color/primary_text_color"
             android:text="Select Gender"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/linear_gender"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@+id/tv_select_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_marginRight="@dimen/view_margin"
            android:id="@+id/tv_male"
            android:textColor="@color/primary_text_color"
            android:background="@drawable/grey_stroke_white_round_corner_background"
            android:text="Male"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="@dimen/view_margin"
            android:id="@+id/tv_female"
            android:textColor="@color/primary_text_color"
            android:background="@drawable/grey_stroke_white_round_corner_background"
            android:text="Female"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/linear_job_money_close_day"
        android:layout_below="@+id/linear_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/linear_job_money"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_label2"
                android:text="Compensation"
                android:gravity="center"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/normal_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_job_money"
                android:hint="-"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/edit_profile_edit_text_padding"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/normal_text_size"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_job_close_day"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_label3"
                android:text="Close Day"
                android:gravity="center"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/normal_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_job_close_day"
                android:hint="-"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/edit_profile_edit_text_padding"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/normal_text_size"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/linear_job_money_close_day"
        android:id="@+id/linear_job_description"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_label4"
            android:text="Job Description"
            android:gravity="center"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_job_description"
            android:hint="-"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/edit_profile_edit_text_padding"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/footer_layout"/>
</RelativeLayout>
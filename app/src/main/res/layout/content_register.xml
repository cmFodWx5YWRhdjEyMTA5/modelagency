<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register"
    tools:context=".activities.RegisterActivity">

    <RelativeLayout
        android:background="@color/transparent_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tv_registration"
        android:textSize="60dp"
        android:textColor="@color/white"
        android:text="Registration"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
      android:layout_marginTop="60dp"
        android:layout_below="@+id/tv_registration"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Company Name"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:background="@drawable/accent_stroke_white_small_round_corner_background"/>

        <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/et_company_name"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Company Email"
            android:paddingLeft="@dimen/edit_text_horizontal_padding"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:background="@drawable/accent_stroke_white_small_round_corner_background"/>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/linear_upload"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1">
            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:hint="Contact Number"
                android:paddingLeft="@dimen/edit_text_horizontal_padding"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:background="@drawable/accent_stroke_white_small_round_corner_background"/>

            <Button
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/button_upload"
                android:background="@drawable/button2"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:text="UPLOAD "
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/linear_upload"
            android:id="@+id/button_submit"
            android:background="@drawable/button1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="SUBMIT "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>


    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
